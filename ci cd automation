pipeline{
	tools{
		jdk 'java'
		maven 'maven'
		}
		agent any
		stages{
			stage('checkout'){
				steps{
					echo 'CLONING....'
					git 'https://github.com/sree9048/gitdemo.git'
				}
			}	
			stage('compile'){
				steps{
					echo 'COMPILING...'
					sh 'mvn compile'
				}
			}
			stage('codereview'){
				steps{
					echo 'CODEREVIEW'
					sh 'mvn pmd:pmd'
				}
			}
			stage('unitTest'){
				steps{
				      echo 'UNITTEST'
					sh 'mvn test'
				}
				
			}
			stage('package'){
				steps{
				       echo 'PACKAGE'
					sh 'mvn test'
				}
			}
			
		}
}
